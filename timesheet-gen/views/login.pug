extends layout.pug

block content
  h1 Timesheet System
    .login
      form(action='/user/auth' method='post')
        label(for='username')
          i.fas.fa-user
        input#username(type='text' name='username' placeholder='Username' required='')
        label(for='password')
          i.fas.fa-lock
        input#password(type='password' name='password' placeholder='Password' required='')
        input(type='submit' value='Login')
        btn.btn.btn-primary(class='regBtn' onclick="window.location.href='/user/register'") Register Account
        btn.btn.btn-primary(class='regBtn' onclick="window.location.href='/user/forgot'") Forgot Password